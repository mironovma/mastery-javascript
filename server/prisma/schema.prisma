generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskCategoryName {
  JavaScript
  TypeScript
  React
  General
}

enum TaskTypeName {
  FlipCard
  PickOne
  PickMultiply
  TrueOrFalse
}

model TaskCategory {
  id            String @id @default(uuid())
  category      TaskCategoryName
  tasks         Task[]
}

model TaskType {
  id            String @id @default(uuid())
  type          TaskTypeName
  tasks         Task[]
}

model Task {
  id            String @id @default(uuid())
  question      String
  answer        String
  hint          String?

  category      TaskCategory @relation(fields: [categoryId], references: [id])
  categoryId    String
  type          TaskType @relation(fields: [typeId], references: [id])
  typeId        String
}

