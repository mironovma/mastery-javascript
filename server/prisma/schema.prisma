generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String @id @default(uuid())
  email           String @unique
  password        String
  username        String?
  isActivated     Boolean @default(false)
  activationLink  String?
  token           Token?
}

model Token {
  id           String @id @default(uuid())
  refreshToken String
  userId       String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}

